@model IEnumerable<SupplierApp.Concrete.Entities.Supplier>
@{
    ViewData["Title"] = "Supplier";
}

<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">@ViewData["Title"] List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Insert" asp-controller="Home" class="btn btn-success form-control text-white">
            Add New @ViewData["Title"]
        </a>
    </div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Street</th>
                    <th>Suburb</th>
                    <th>PostCode</th>
                    <th>State</th>
                    <th>Country</th>
                    <th>Created Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.StreetAddress</td>
                    <td>@item.Suburb</td>
                    <td>@item.PostCode</td>
                    <td>@item.State</td>
                    <td>@item.Country</td>
                    <td>@item.CreatedDate</td>
                    <td>
                        <a asp-action="Update" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-primary form-control text-white">
                            Edit
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

</div>
