@model IEnumerable<SupplierApp.Concrete.Entities.Product>
@{
    ViewData["Title"] = "Product";
}

<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">@ViewData["Title"] List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Insert" asp-controller="Product" class="btn btn-success form-control text-white">
            Add New @ViewData["Title"]
        </a>
    </div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>UnitPrice</th>
                    <th>Tax</th>
                    <th>Price Included Tax</th>
                    <th>CreatedDate</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.Tax</td>
                    <td>@item.PriceIncludedTax</td>
                    <td>@item.CreatedDate</td>
                    <td>
                        <a asp-action="Update" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-primary form-control text-white">
                            Edit
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

</div>
