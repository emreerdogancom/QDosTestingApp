@model SupplierApp.Concrete.Entities.Product
@{
    ViewData["Title"] = "Product";
}

<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">@ViewData["Title"] Edit</h2>
    </div>

    <div class="border container" style="padding:30px;">
        <form method="post">

            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="ProductName"></label>
                </div>
                <div class="col-6">
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Quantity"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="UnitPrice"></label>
                </div>
                <div class="col-6">
                    <input asp-for="UnitPrice" class="form-control" />
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Tax"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Tax" class="form-control" />
                    <span asp-validation-for="Tax" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3 offset-3">
                    <a asp-action="Index" class="btn btn-dark form-control">Back to List</a>
                </div>
                <div class="col-3 ">
                    <button type="submit" class="btn btn-success form-control">
                        Update
                    </button>
                </div>

            </div>
        </form>
    </div>
</div>
